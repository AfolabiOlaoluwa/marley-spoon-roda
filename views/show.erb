<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-lg-3 mt-4">
      <h1>Recipe Details </h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <div class="img-fluid card">
          <img src="<%= @recipe_details.photo.url(width: 1020, height: 700, format: 'png', quality: 100) %>" alt="<%= @recipe_details.title %>"/>
        </div>
        <div class="card-block">
          <h3 class="text-bold"><%= @recipe_details.title %></h3>
          <% if @recipe_details.fields.key?(:tags) %>
            <div id="tags">
              <br>
              <% @recipe_details.tags.each do |tag| %>
                <span class="btn btn-primary btn-sm"><%= tag.name %></span>
              <% end %>
            </div>
          <% end %>
          <% if @recipe_details.fields.key?(:description) %>
            <div>
              <br>
              <%= @recipe_details.description %>
            </div>
          <% end %>
          <% if @recipe_details.fields.key?(:chef) %>
            <div id="chef">
              <br>
              <p>Chef: <%= @recipe_details.chef.name %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>